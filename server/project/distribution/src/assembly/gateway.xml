<component>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>com.isnowfox.game.mj:mj-gateway</include>
            </includes>
            <binaries>
                <outputDirectory>gateway/classes</outputDirectory>
                <includeDependencies>false</includeDependencies>
            </binaries>
        </moduleSet>
    </moduleSets>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>gateway/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${config.path}/gateway/</directory>
            <includes>
                <include>GatewayConfig.xml</include>
            </includes>
            <outputDirectory>gateway/classes/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${config.path}/gateway/</directory>
            <includes>
                <include>startup.sh</include>
            </includes>
            <outputDirectory>gateway/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${config.path}/gateway/</directory>
            <includes>
                <include>Dockerfile</include>
            </includes>
            <outputDirectory>gateway/</outputDirectory>
        </fileSet>
    </fileSets>
</component>
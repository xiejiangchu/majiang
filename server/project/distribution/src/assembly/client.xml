<component>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>com.isnowfox.game.mj:mj-client</include>
            </includes>
            <binaries>
                <outputDirectory>client/classes</outputDirectory>
                <includeDependencies>false</includeDependencies>
            </binaries>
        </moduleSet>
    </moduleSets>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>client/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${config.path}/client/</directory>
            <includes>
                <include>application.yml</include>
            </includes>
            <outputDirectory>client/classes/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${config.path}/client/</directory>
            <includes>
                <include>startup.sh</include>
            </includes>
            <outputDirectory>client/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${config.path}/client/</directory>
            <includes>
                <include>Dockerfile</include>
            </includes>
            <outputDirectory>client/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${static.path}</directory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>index.html</exclude>
            </excludes>
            <outputDirectory>client/classes/static/</outputDirectory>
        </fileSet>
    </fileSets>
</component>